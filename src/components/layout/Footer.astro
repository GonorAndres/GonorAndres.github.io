---
import { t } from '../../i18n';
import type { Lang } from '../../i18n';
import Squiggle from '../decorations/Squiggle.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<footer class="bg-navy text-cream/80">
  <Squiggle class="w-full h-4" color="#D4A574" />
  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <span class="font-serif text-xl font-bold text-cream">{lang === 'es' ? 'Licenciado en Actuaría' : 'Actuarial Sciences'}</span>
        <p class="mt-2 text-sm text-cream/60">Andrés González Ortega</p>
      </div>
      <div class="space-y-2">
        <a href="https://drive.google.com/drive/folders/1M7KZaFbTw19vDoA-AeusJDkL--nnAwEN?usp=drive_link" target="_blank" rel="noopener" class="block text-sm hover:text-amber transition-colors">
          {lang === 'es' ? 'Carpeta academica' : 'Academic folder'}
        </a>
        <a href="https://drive.google.com/drive/folders/1M7KZaFbTw19vDoA-AeusJDkL--nnAwEN?usp=sharing" target="_blank" rel="noopener" class="block text-sm hover:text-amber transition-colors">
          {lang === 'es' ? 'Apuntes sueltos' : 'Miscellaneous notes'}
        </a>
      </div>
      <div class="text-sm text-cream/50">
        <p>&copy; {new Date().getFullYear()} Andrés González Ortega.</p>
        <p>{t(lang, 'footer.rights')}</p>
      </div>
    </div>
  </div>
</footer>
