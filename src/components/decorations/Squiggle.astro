---
interface Props {
  class?: string;
  color?: string;
}

const { class: className = '', color = '#D4A574' } = Astro.props;
---

<svg
  viewBox="0 0 400 30"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['pointer-events-none', className]}
  aria-hidden="true"
  preserveAspectRatio="none"
>
  <path
    d="M0,15 C30,5 60,25 90,15 C120,5 150,25 180,15 C210,5 240,25 270,15 C300,5 330,25 360,15 C390,5 400,15 400,15"
    stroke={color}
    stroke-width="2"
    fill="none"
    opacity="0.4"
  />
</svg>
