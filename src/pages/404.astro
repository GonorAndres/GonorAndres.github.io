---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Pagina no encontrada" lang="es">
  <section class="py-32 px-6 text-center">
    <div class="max-w-md mx-auto">
      <h1 class="text-6xl font-bold text-navy mb-4">404</h1>
      <p class="text-xl text-navy/70 mb-2">Pagina no encontrada</p>
      <p class="text-lg text-navy/50 mb-8">Page not found</p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-terracotta text-cream font-medium rounded-lg hover:bg-terracotta/90 transition-colors"
      >
        Volver al inicio / Back home
      </a>
    </div>
  </section>
</BaseLayout>
